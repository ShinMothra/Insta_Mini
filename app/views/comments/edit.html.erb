<div class="max-w-xl mx-auto mt-10">
  <h2 class="text-xl font-bold mb-4">Редактировать комментарий</h2>

  <%= form_with(model: @comment, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :content, "Комментарий", class: "block text-gray-700" %>
      <%= form.text_area :content, rows: 3, class: "w-full border-gray-300 rounded" %>
    </div>

    <div class="flex gap-2">
      <%= form.submit "Обновить", class: "bg-green-500 text-white px-4 py-2 rounded" %>
      <%= link_to "Отмена", post_path(@comment.post), class: "bg-gray-400 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>
</div>
